{
    "name": "pretext-tools",
    "displayName": "PreTeXt-tools",
    "description": "Language support and more for PreTeXt",
    "version": "0.3.0",
    "publisher": "oscarlevin",
    "repository": "https://github.com/oscarlevin/vscode-pretext/tree/master/pretext-tools",
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:pretext-tools.helloWorld"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "grammars": [
            {
                "scopeName": "text.xml.ptx",
                "path": "./syntaxes/ptx.tmLanguage.json",
                "embeddedLanguages": {
                    "text.tex": "tex",
                    "text.tex.latex": "latex",
                    "source.asymptote": "asymptote"
                },
                "injectTo": [
                    "text.xml"
                ]
            }
        ],
        "snippets": [
            {
                "language": "xml",
                "path": "./snippets/pretext.json"
            },
            {
                "language": "xml",
                "path": "./snippets/pretext-attributes.json"
            },
            {
                "language": "xml",
                "path": "./snippets/pretext-templates.json"
            }
        ],
        "keybindings": [
            {
                "command": "pretext-tools.helloWorld",
                "key": "ctrl+K P",
                "mac": "cmd+K P",
                "when": "editorTextFocus && editorLangId == 'XML'"
            }
        ],
        "commands": [
            {
                "command": "pretext-tools.helloWorld",
                "title": "Hello",
                "category": "PreTeXt Tools"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.57.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}
